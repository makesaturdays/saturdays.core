
<div class="padded white_back">
	{{#if session.user_id}}
	<button class="js-logout">{{pieces.admin.logout}}</button>
	{{else}}
	<form action="#" class="js-submit_login">
		<label for="email">{{pieces.admin.email_label}}</label>
		<input type="email" id="email" name="email">
		<label for="email">{{pieces.admin.password_label}}</label>
		<input type="password" id="password" name="password">
		<button type="submit">{{pieces.admin.submit}}</button>
	</form>
	{{/if}}
</div>